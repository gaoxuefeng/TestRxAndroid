<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1D1C21"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_118px"
            android:gravity="center"
            android:text="我的"
            android:textColor="#B5B7BF"
            android:textSize="@dimen/text_design_36px" />

        <RelativeLayout
            android:id="@+id/frag_mine_setting"
            android:layout_width="80dp"
            android:layout_height="@dimen/design_118px"
            android:layout_alignParentRight="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/design_30px"
                android:src="@drawable/mine_setting_icon" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#88000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/design_340px"
                    android:background="@drawable/mine_bg"
                    android:orientation="vertical" >

                    <cn.com.ethank.yunge.app.util.XCRoundImageViewByXfermode
                        android:id="@+id/mine_iv"
                        android:layout_width="@dimen/design_135px"
                        android:layout_height="@dimen/design_135px"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/design_64px"
                        android:background="@drawable/mine_defaultavatar" />

                    <TextView
                        android:id="@+id/frag_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/design_20px"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:enabled="true"
                        android:text="还没登录呢？赶快登录潮趴汇KTV，享受音乐的海洋！"
                        android:textColor="#66B5B7BF"
                        android:textSize="@dimen/text_design_22px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/design_15px"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/frag_constel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/mine_man"
                            android:drawablePadding="@dimen/design_15px"
                            android:textColor="#80B5B7BF"
                            android:textSize="@dimen/text_design_22px"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/mine_but_login"
                            android:layout_width="@dimen/design_240px"
                            android:layout_height="@dimen/design_60px"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/login_shape"
                            android:paddingBottom="5dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:paddingTop="5dp"
                            android:text="立即登录"
                            android:textColor="#66B5B7BF"
                            android:textSize="@dimen/text_design_24px" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/mine_view"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frag_consume"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_118px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/design_32px"
                    android:drawableLeft="@drawable/mine_cost_icon"
                    android:drawablePadding="@dimen/design_30px"
                    android:gravity="center_vertical"
                    android:text="我的消费"
                    android:textColor="#B5B7BF"
                    android:textSize="@dimen/text_design_28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/list_next" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#4D000000" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/frag_voice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_118px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/design_32px"
                    android:drawableLeft="@drawable/mine_soundrecording_icon"
                    android:drawablePadding="@dimen/design_30px"
                    android:gravity="center_vertical"
                    android:text="我的录音"
                    android:textColor="#B5B7BF"
                    android:textSize="@dimen/text_design_28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/list_next" />
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#4D000000" />

            <RelativeLayout
                android:id="@+id/mine_rl_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_118px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/design_32px"
                    android:drawableLeft="@drawable/mine_room_icon"
                    android:drawablePadding="@dimen/design_30px"
                    android:gravity="center_vertical"
                    android:text="我的房间"
                    android:textColor="#B5B7BF"
                    android:textSize="@dimen/text_design_28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/list_next" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#4D000000" />

            <RelativeLayout
                android:id="@+id/mine_rl_mark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_118px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/design_32px"
                    android:drawableLeft="@drawable/mine_memorial_icon"
                    android:drawablePadding="@dimen/design_30px"
                    android:gravity="center_vertical"
                    android:text="纪念册"
                    android:textColor="#B5B7BF"
                    android:textSize="@dimen/text_design_28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/list_next" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#4D000000" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
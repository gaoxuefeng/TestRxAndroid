<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222126"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_20px"
        android:background="#1D1C21" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#4D000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_78px" >

        <TextView
            android:id="@+id/drink_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/design_78px"
            android:layout_marginLeft="@dimen/design_24px"
            android:gravity="center_vertical"
            android:text="宝乐迪量贩KTV九棵树店"
            android:textColor="#9799A2"
            android:textSize="@dimen/text_design_28px" />
        
        <ImageView 
            android:id="@+id/tab_tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/design_40px"
           	android:src="@drawable/drink"
           />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#4D000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_112px"
        android:background="#222126" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/design_112px"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/drink_tv_thing"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/design_40px"
                android:layout_marginRight="@dimen/design_40px"
                android:gravity="center_vertical"
                android:text="科洛娜夏日装草黑为小瓶，水果洛娜夏日装草黑为小瓶，水果"
                android:ellipsize="end"
                android:textColor="#809799a2"
                android:textSize="@dimen/text_design_28px" />

        </LinearLayout>

        <TextView
            android:id="@+id/drink_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/design_40px"
            android:text="待支付"
            android:textColor="#f03da2"
            android:textSize="@dimen/design_26px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#4D000000" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
     >

    <TextView
        android:id="@+id/merchand_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:maxEms="7"
        android:maxLines="2"
        android:text="科洛娜夏日装草莓味小瓶"
        android:textColor="#b3ffffff"
        android:textSize="@dimen/text_design_26px" />

    <TextView
        android:id="@+id/merchand_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="12/"
        android:textColor="#b3ffffff"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/text_design_26px" 
        android:layout_toRightOf="@id/merchand_tv_name"/>

    <TextView
        android:id="@+id/merchand_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/merchand_tv_num"
        android:gravity="center_vertical"
        android:text="15.00"
        android:textColor="#b3ffffff"
        android:textSize="@dimen/text_design_26px" />

    <TextView
        android:id="@+id/merchand_tv_allPrice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="￥120"
        android:textColor="#eeff62"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_design_26px" />

</RelativeLayout>
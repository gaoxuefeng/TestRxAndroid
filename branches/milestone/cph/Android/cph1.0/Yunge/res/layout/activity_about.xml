<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1D21"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:background="#151417" >

        <TextView
            android:id="@+id/about_tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/design_30px"
            android:clickable="true"
            android:drawableLeft="@drawable/nav_back"
            android:drawablePadding="@dimen/design_10px"
            android:enabled="true"
            android:text="设置"
            android:textColor="#FF41AB"
            android:textSize="@dimen/text_design_28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于我们"
            android:textColor="#B5B7BF"
            android:textSize="@dimen/text_design_36px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#88000000" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="潮趴汇 1.0"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/set_rl_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:layout_marginTop="50dp"
        android:background="#2C2A30" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#88000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/design_32px"
            android:drawablePadding="@dimen/design_30px"
            android:gravity="center_vertical"
            android:text="免责声明"
            android:textColor="#4C4C53"
            android:textSize="@dimen/text_design_28px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:src="@drawable/list_next" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/design_32px"
            android:background="#88000000" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:background="#2C2A30" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/design_32px"
            android:drawablePadding="@dimen/design_30px"
            android:gravity="center_vertical"
            android:text="系统通知"
            android:textColor="#4C4C53"
            android:textSize="@dimen/text_design_28px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:src="@drawable/list_next" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/design_32px"
            android:background="#88000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:background="#2C2A30" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/design_32px"
            android:drawablePadding="@dimen/design_30px"
            android:gravity="center_vertical"
            android:text="联系电话"
            android:textColor="#4C4C53"
            android:textSize="@dimen/text_design_28px" />

        <TextView
            android:id="@+id/about_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center_vertical"
            android:text="010-84775234"
            android:textColor="#FF41AB" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#88000000" />

</LinearLayout>
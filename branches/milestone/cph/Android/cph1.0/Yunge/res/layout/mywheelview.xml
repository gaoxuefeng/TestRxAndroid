<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/pre_head"
        android:text="选择预约时间" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <RelativeLayout
            android:id="@+id/layout_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1f1f1f"
            android:orientation="horizontal" >

            <kankan.wheel.widget.WheelView
                android:id="@+id/wheelview1_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               	android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" >
            </kankan.wheel.widget.WheelView>

            <kankan.wheel.widget.WheelView
                android:id="@+id/wheelview2_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
            </kankan.wheel.widget.WheelView>

            <kankan.wheel.widget.WheelView
                android:id="@+id/wheelview3_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                 >
            </kankan.wheel.widget.WheelView>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/wheelview3_id"
                android:gravity="center_vertical"
                android:text="唱" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="80dp"
            android:background="#4cffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="115dp"
            android:background="#4cffffff" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/titlelayout_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_98px"
        android:background="@drawable/pre_foot"
         >

        <TextView
            android:id="@+id/tv_cancel_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:id="@+id/tv_ok_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#e30088"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
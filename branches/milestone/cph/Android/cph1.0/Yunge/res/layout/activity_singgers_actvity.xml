<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_singer_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151417"
    android:orientation="vertical"
    android:padding="5dp"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

           <!--  <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/song_title_color_bg" /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/song_title_color_bg"
                android:text="热门歌星推荐"
                android:textColor="#46464B"
                android:textSize="@dimen/text_design_26px" />
        </LinearLayout>

        <cn.com.ethank.yunge.view.MyGridView
            android:id="@+id/gv_singers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:verticalSpacing="15dp" >
        </cn.com.ethank.yunge.view.MyGridView>

        <LinearLayout
            android:id="@+id/ll_two_Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <cn.com.ethank.yunge.view.MyListView
            android:id="@+id/lv_types"
            style="@style/BasicText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:divider="#151417"
            android:dividerHeight="0dp"
            android:listSelector="#00ffffff" >
        </cn.com.ethank.yunge.view.MyListView>
    </LinearLayout>

</ScrollView>
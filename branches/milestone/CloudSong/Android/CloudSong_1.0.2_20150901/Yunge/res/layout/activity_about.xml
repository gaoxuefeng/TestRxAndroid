<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepager_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:background="@color/bg_color" >

        <TextView
            android:id="@+id/about_tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/design_30px"
            android:clickable="true"
            android:drawableLeft="@drawable/nav_back"
            android:drawablePadding="@dimen/design_10px"
            android:enabled="true"
            android:text="设置"
            android:textColor="#FF41AB"
            android:textSize="@dimen/text_design_28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于潮趴汇"
            android:textColor="#B5B7BF"
            android:textSize="@dimen/text_design_36px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#00000000" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="潮趴汇 "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about_tv_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="当前版本号："
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/about_img_code"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/about" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="邀请好友扫一扫分享给TA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/about_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="潮趴汇软件许可使用协议"
            android:textColor="@color/order_pink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="壹尚科技  版权所有" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/about_tv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="copyright " />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/copy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  2015 Ethank.com.cn.All Right Reserved" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/set_rl_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:layout_marginTop="50dp"
        android:background="#2C2A30"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#88000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/design_32px"
            android:drawablePadding="@dimen/design_30px"
            android:gravity="center_vertical"
            android:text="免责声明"
            android:textColor="#4C4C53"
            android:textSize="@dimen/text_design_28px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:src="@drawable/list_next" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/design_32px"
            android:background="#88000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:background="#2C2A30"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/design_32px"
            android:drawablePadding="@dimen/design_30px"
            android:gravity="center_vertical"
            android:text="系统通知"
            android:textColor="#4C4C53"
            android:textSize="@dimen/text_design_28px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:src="@drawable/list_next" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/design_32px"
            android:background="#88000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:background="#2C2A30"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/design_32px"
            android:drawablePadding="@dimen/design_30px"
            android:gravity="center_vertical"
            android:text="联系电话"
            android:textColor="#4C4C53"
            android:textSize="@dimen/text_design_28px" />

        <TextView
            android:id="@+id/about_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center_vertical"
            android:text="010-84775234"
            android:textColor="#FF41AB" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#88000000"
        android:visibility="gone" />

</LinearLayout>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BasicFillTx">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fadingEdgeLength">0dp</item>
    </style>
    <style name="BasicWrapTx">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SingleLineWrapTx" parent="BasicWrapTx">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ClickableTx" parent="SingleLineWrapTx">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchInput">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#252525</item>
        <item name="android:textColorHint">@color/search_input_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="SearchTabView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="SearchTabTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BasicVerSpliter">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/basic_list_spliter</item>
    </style>

    <style name="BasicHonSpliter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5px</item>
        <item name="android:background">@color/basic_list_spliter</item>
    </style>

    <style name="BasicList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/basic_list_spliter</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:dividerHeight">1px</item>
    </style>


    <style name="BasicText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="BasicListLinearLayoutContainerV">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:background">@drawable/entry_basic_list_selector</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SingLineTx">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="SingLineTxCenter" parent="SingLineTx">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>ßßßßß
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="themeTest1" parent="AppBaseTheme">
        <item name="appbg">@color/BLACK</item>
        <item name="sinktextcolor">@color/red</item>
    </style>
    
     <style name="themeTest2" parent="AppBaseTheme">
        <item name="appbg">@color/WHITE</item>
        <item name="sinktextcolor">@color/GREEN</item>
    </style>
    
</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_share_pop_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_alignParentBottom="true"
        android:background="#422769"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/design_80px"
        android:paddingRight="@dimen/design_80px" >

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/ll_pre_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/pre_iv_wechat"
                    android:layout_width="@dimen/design_80px"
                    android:layout_height="@dimen/design_80px"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/player_wechat_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/design_22px"
                    android:gravity="center"
                    android:text="微信"
                    android:textColor="@color/player_title"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pre_cricle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/pre_iv_friends"
                    android:layout_width="@dimen/design_80px"
                    android:layout_height="@dimen/design_80px"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/player_friends" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/design_22px"
                    android:gravity="center"
                    android:text="朋友圈"
                    android:textColor="@color/player_title"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pre_QQ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/pre_iv_qq"
                    android:layout_width="@dimen/design_80px"
                    android:layout_height="@dimen/design_80px"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/player_qq_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/design_22px"
                    android:gravity="center"
                    android:text="QQ"
                    android:textColor="@color/player_title"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pre_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/pre_iv_weibo"
                    android:layout_width="@dimen/design_80px"
                    android:layout_height="@dimen/design_80px"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/player_weibo_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/design_22px"
                    android:gravity="center"
                    android:text="微博"
                    android:textColor="@color/player_title"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
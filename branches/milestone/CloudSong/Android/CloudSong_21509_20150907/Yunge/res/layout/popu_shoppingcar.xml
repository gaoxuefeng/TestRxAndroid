<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_bg_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/contentlayout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/botttom_layout_id"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/addsumshoppingcarlayout_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-1dp"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/carlayout_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-5dp" >

                <include
                    android:id="@+id/carbar_id"
                    layout="@layout/layout_catering_carnum" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/carlayout_id"
                android:layout_marginTop="5dp"
                android:background="@drawable/shoppingcartitlebg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="已选菜单 "
                    android:textColor="@color/alphe60white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_clearcar_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/clearshoppingcar_icon"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text=" 清理购物车 "
                    android:textColor="@color/alphe60white"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>

        <cn.com.ethank.yunge.view.ScrollListView
            android:id="@+id/listview_shoppingcarlist_id"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#482a70"
            android:divider="@color/listview_divider"
            android:dividerHeight="1dp" >
        </cn.com.ethank.yunge.view.ScrollListView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/botttom_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#43246b" >

        <TextView
            android:id="@+id/tv_total_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingRight="40dp"
            android:text="合计：¥0"
            android:textColor="@color/WHITE"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_pay_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/text_bg"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="立即下单"
            android:textColor="@color/WHITE"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>
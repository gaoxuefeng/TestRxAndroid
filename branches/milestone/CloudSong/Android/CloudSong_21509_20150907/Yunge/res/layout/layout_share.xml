<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/design_34px"
        android:paddingLeft="@dimen/design_80px"
        android:paddingRight="@dimen/design_80px"
        android:paddingTop="@dimen/design_68px" >

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/ll_wechat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/iv_wechat"
                        android:layout_width="@dimen/design_80px"
                        android:layout_height="@dimen/design_80px"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/player_wechat_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/design_22px"
                        android:gravity="center"
                        android:text="微信"
                        android:textColor="@color/player_title"
                        android:textSize="@dimen/text_design_24px" />
                </LinearLayout>

                

                <LinearLayout
                    android:id="@+id/ll_friend_cricle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_friend_cricle"
                        android:layout_width="@dimen/design_80px"
                        android:layout_height="@dimen/design_80px"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/player_friends" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/design_22px"
                        android:gravity="center"
                        android:text="朋友圈"
                        android:textColor="@color/player_title"
                        android:textSize="@dimen/text_design_24px" />
                </LinearLayout>

                

                <LinearLayout
                    android:id="@+id/ll_QQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                     >

                    <ImageView
                        android:id="@+id/iv_QQ"
                        android:layout_width="@dimen/design_80px"
                        android:layout_height="@dimen/design_80px"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/player_qq_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/design_22px"
                        android:gravity="center"
                        android:text="QQ"
                        android:textColor="@color/player_title"
                        android:textSize="@dimen/text_design_24px" />
                </LinearLayout>

               

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" 
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_sina"
                        android:layout_width="@dimen/design_80px"
                        android:layout_height="@dimen/design_80px"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/player_weibo_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/design_22px"
                        android:gravity="center"
                        android:text="微博"
                        android:textColor="@color/player_title"
                        android:textSize="@dimen/text_design_24px" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_80px"
            android:layout_below="@id/rl_share"
            android:layout_marginTop="@dimen/design_46px"
            android:background="@color/white_one"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/player_title"
            android:textSize="@dimen/text_design_28px" />
    </RelativeLayout>

</RelativeLayout>
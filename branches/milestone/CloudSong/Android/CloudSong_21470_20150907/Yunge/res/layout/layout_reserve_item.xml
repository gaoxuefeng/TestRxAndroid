<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0AFFFFFF"
        android:clickable="true"
        android:drawableLeft="@drawable/schedule_comment_icon"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        android:textColor="#44FFFFFF"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_158px"
        android:gravity="center_vertical" >

        <!-- 左边图片 -->

        <cn.com.ethank.yunge.view.MyRoundImageView
            android:id="@+id/iv_reserve_image"
            android:layout_width="@dimen/design_158px"
            android:layout_height="@dimen/design_120px"
            android:layout_marginLeft="12dp"
            android:background="@drawable/schedule_ktv_default_bg"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_reserve_top_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_reserve_image"
            android:layout_alignTop="@+id/iv_reserve_image"
            android:src="@drawable/schedule_pic_title" />
        <!-- 中间描述 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_120px"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/iv_reserve_image" >

            <LinearLayout
                android:id="@+id/rl_ktvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_KTV_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="金永"
                    android:textColor="@color/WHITE"
                    android:textSize="@dimen/text_design_26px" />

                <TextView
                    android:id="@+id/tv_KTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="KTV"
                    android:textColor="@color/order_white"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="7dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/iv_tuan"
                    android:layout_width="@dimen/design_30px"
                    android:layout_height="@dimen/design_30px"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/schedule_label_group"
                    android:gravity="center_vertical"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_cu"
                    android:layout_width="@dimen/design_30px"
                    android:layout_height="@dimen/design_30px"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/schedule_label_promotion"
                    android:gravity="center_vertical"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_ka"
                    android:layout_width="@dimen/design_30px"
                    android:layout_height="@dimen/design_30px"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/schedule_label_card"
                    android:gravity="center_vertical"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_hui"
                    android:layout_width="@dimen/design_30px"
                    android:layout_height="@dimen/design_30px"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/schedule_label_discount"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_ktvname"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/rl_ktvname"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:drawableLeft="@drawable/schedule_distance"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="  1.3km"
                android:textColor="@color/alphe60white"
                android:textSize="@dimen/text_design_18px" >
            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_ktvname"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" >

                <RatingBar
                    android:id="@+id/app_star"
                    style="@style/myRatingBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:rating="4" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/app_star"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="￥65/人"
                    android:textColor="@color/alphe60white"
                    android:textSize="@dimen/text_design_18px" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/tv_ktv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="望京"
                    android:textColor="@color/alphe60white"
                    android:textSize="@dimen/text_design_20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/tv_ktv_location"
                    android:text="KTV"
                    android:textColor="@color/alphe60white"
                    android:textSize="@dimen/text_design_20px" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/reserve_distance_bg"
                android:text="1.3折起"
                android:textColor="@color/order_pink"
                android:textSize="9sp" >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#0AFFFFFF" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_ll_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/homepager_bg"
    android:orientation="vertical" >

    <include layout="@layout/activity_head_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:background="@color/bg_color"
                android:id="@+id/edit_rl_head_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_108px"
               >

                <TextView
                    android:id="@+id/edit_tv_xin_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/design_40px"
                    android:gravity="center_vertical"
                    android:text="头像"
                    android:textColor="#aaffffff"
                    android:textSize="@dimen/text_design_30px" />

                <cn.com.ethank.yunge.app.util.XCRoundImageViewByXfermode
                    android:id="@+id/edit_rivx_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/design_50px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/design_20px"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/edit_nickName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/design_108px"
                    android:background="@color/bg_color" >

                    <TextView
                        android:id="@+id/edit_tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/design_40px"
                        android:gravity="center_vertical"
                        android:text="昵称"
                        android:textSize="@dimen/text_design_30px" />

                    <ImageView
                        android:id="@+id/nickname_iv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/design_50px"
                        android:src="@drawable/list_next" />

                    <EditText
                        android:id="@+id/edit_your_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/design_80px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/design_92px"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/nickname_iv_right"
                        android:layout_toRightOf="@id/edit_tv_nickname"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#B5B7BF"
                        android:textSize="@dimen/design_28px" />
                </RelativeLayout>

                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_color" />
                
                
                <RelativeLayout
                    android:id="@+id/edit_gender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/design_108px"
                    android:background="@color/bg_color" >

                    <TextView
                        android:id="@+id/edit_tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/design_40px"
                        android:gravity="center_vertical"
                        android:text="性别"
                        android:textColor="#aaffffff"
                        android:textSize="@dimen/text_design_30px" />

                    <TextView
                        android:id="@+id/edit_your_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/design_92px"
                        android:layout_toRightOf="@id/edit_tv_gender"
                        android:textColor="#B5B7BF"
                        android:textSize="@dimen/design_28px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/design_50px"
                        android:src="@drawable/list_next" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_color" />

                <RelativeLayout
                    android:id="@+id/edit_age"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/design_108px"
                    android:background="@color/bg_color" >

                    <TextView
                        android:id="@+id/edit_tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/design_40px"
                        android:gravity="center_vertical"
                        android:text="年龄"
                        android:textColor="#aaffffff"
                        android:textSize="@dimen/text_design_30px" />

                    <TextView
                        android:id="@+id/edit_your_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/design_92px"
                        android:layout_toRightOf="@id/edit_tv_age"
                        android:textColor="#B5B7BF"
                        android:textSize="@dimen/design_28px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/design_50px"
                        android:src="@drawable/list_next" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/edit_constell"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/design_108px"
                    android:background="@color/bg_color" >

                    <TextView
                        android:id="@+id/edit_tv_constell"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/design_40px"
                        android:gravity="center_vertical"
                        android:text="星座"
                        android:textColor="#aaffffff"
                        android:textSize="@dimen/text_design_30px" />

                    <TextView
                        android:id="@+id/edit_your_constell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/design_92px"
                        android:layout_toRightOf="@id/edit_tv_constell"
                        android:textColor="#B5B7BF"
                        android:textSize="@dimen/design_28px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/design_50px"
                        android:src="@drawable/list_next" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/text_color" />

                <RelativeLayout
                    android:id="@+id/edit_blood"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/design_108px"
                    android:background="@color/bg_color" >

                    <TextView
                        android:id="@+id/edit_tv_blood"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/design_40px"
                        android:gravity="center_vertical"
                        android:text="血型"
                        android:textColor="#aaffffff"
                        android:textSize="@dimen/text_design_30px" />

                    <TextView
                        android:id="@+id/edit_your_blood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/design_92px"
                        android:layout_toRightOf="@id/edit_tv_blood"
                        android:textColor="#B5B7BF"
                        android:textSize="@dimen/design_28px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/design_50px"
                        android:src="@drawable/list_next" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:orientation="vertical"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/edit_singer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#222126" >

                    <TextView
                        android:id="@+id/info_tv_sings"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/design_108px"
                        android:layout_marginLeft="@dimen/design_40px"
                        android:gravity="center_vertical"
                        android:text="最爱歌手"
                        android:textColor="#4C4C53"
                        android:textSize="@dimen/text_design_30px" />

                    <ImageView
                        android:id="@+id/edit_sing_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/design_50px"
                        android:src="@drawable/list_next" />

                    <TextView
                        android:id="@+id/edit_your_singer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/edit_sing_right"
                        android:layout_toRightOf="@id/info_tv_sings"
                        android:textColor="#B5B7BF"
                        android:textSize="16sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#1E1C20" />

                <RelativeLayout
                    android:id="@+id/edit_song"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#222126" >

                    <TextView
                        android:id="@+id/info_tv_songs"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/design_108px"
                        android:layout_marginLeft="@dimen/design_40px"
                        android:gravity="center_vertical"
                        android:text="最喜欢的歌曲"
                        android:textColor="#4C4C53"
                        android:textSize="@dimen/text_design_30px" />

                    <ImageView
                        android:id="@+id/edit_song_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/design_50px"
                        android:src="@drawable/list_next" />

                    <TextView
                        android:id="@+id/edit_your_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/edit_song_right"
                        android:layout_toRightOf="@id/info_tv_songs"
                        android:textColor="#B5B7BF"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/edit_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#222126"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/edit_tv_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/design_108px"
                        android:layout_marginLeft="@dimen/design_40px"
                        android:gravity="center_vertical"
                        android:text="个性签名"
                        android:textColor="#4C4C53"
                        android:textSize="@dimen/text_design_30px" />

                    <ImageView
                        android:id="@+id/edit_introduce_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/design_50px"
                        android:src="@drawable/list_next" />

                    <TextView
                        android:id="@+id/edit_your_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/design_20px"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/edit_introduce_right"
                        android:layout_toRightOf="@id/edit_tv_sign"
                        android:textColor="#B5B7BF"
                        android:textSize="@dimen/design_30px" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <cn.com.ethank.yunge.view.MyRadioGroup
            android:id="@+id/mrg_selectColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/remote_interaction_black_btn"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/remote_interaction_white_btn"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/remote_interaction_violet_btn"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/remote_interaction_orange_btn"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/remote_interaction_yellow_btn"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/remote_interaction_blue_btn"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/remote_interaction_green_btn"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/remote_interaction_pink_btn"
                    android:button="@null" />
            </RelativeLayout>
        </cn.com.ethank.yunge.view.MyRadioGroup>

        <ImageView
            android:id="@+id/iv_select_color_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/remote_interaction_ok_btn" />
    </LinearLayout>

</RelativeLayout>
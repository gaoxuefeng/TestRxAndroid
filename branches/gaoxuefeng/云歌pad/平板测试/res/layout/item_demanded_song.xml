<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_162px"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/design_50px"
        android:paddingRight="@dimen/design_60px" >

        <RelativeLayout
            android:id="@+id/rl_single"
            android:layout_width="@dimen/design_100px"
            android:layout_height="match_parent"
            android:gravity="center" >

            <cn.com.ethank.yunge.pad.view.XCRoundImageViewByXfermode
                android:id="@+id/iv_single"
                android:layout_width="@dimen/design_100px"
                android:layout_height="@dimen/design_100px"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_demand_song"
            android:layout_width="@dimen/design_80px"
            android:layout_height="@dimen/design_162px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/design_10px" >

            <ImageView
                android:id="@+id/iv_demand_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:button="@null"
                android:padding="@dimen/design_15px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/rl_single"
            android:layout_alignTop="@id/rl_single"
            android:layout_toLeftOf="@id/rl_demand_song"
            android:layout_toRightOf="@id/rl_single"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/design_30px" >

            <TextView
                android:id="@+id/tv_music_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="小苹果"
                android:textColor="@color/text_color_namal_70"
                android:textSize="@dimen/text_design_38px" />

            <TextView
                android:id="@+id/tv_music_singler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/design_12px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="国语-筷子兄弟"
                android:textColor="@color/text_color_namal_40"
                android:textSize="@dimen/text_design_30px" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_select_song"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_90px"
        android:background="#0AFFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_song_to_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/song_bin_icon"
                android:drawablePadding="@dimen/design_20px"
                android:gravity="center_vertical"
                android:text="删除歌曲"
                android:textColor="@color/text_color_namal_40"
                android:textSize="@dimen/text_design_38px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_song_to_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/design_20px"
                android:textColor="@color/text_color_namal_40"
                android:textSize="@dimen/text_design_38px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
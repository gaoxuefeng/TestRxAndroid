<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/rl_search_song"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin_da"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_da"
                    android:layout_marginTop="@dimen/activity_horizontal_margin_top_da"
                    android:background="@drawable/song_search_bg" >

                    <TextView
                        android:id="@+id/tv_search_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/song_search_icon"
                        android:drawablePadding="@dimen/design_24px"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="搜索歌星或歌曲"
                        android:textColor="#4cFFFFFF"
                        android:textSize="@dimen/text_design_42px" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/design_60px"
                android:paddingTop="@dimen/design_60px" >

                <LinearLayout
                    android:id="@+id/ll_singers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/song_singer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/design_8px"
                        android:text="@string/title_singger"
                        android:textColor="@color/text_color_namal_70"
                        android:textSize="@dimen/text_design_42px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_languages"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/song_language" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/design_8px"
                        android:text="@string/title_langue"
                        android:textColor="@color/text_color_namal_70"
                        android:textSize="@dimen/text_design_42px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_types"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/song_classification" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/design_8px"
                        android:text="@string/title_type"
                        android:textColor="@color/text_color_namal_70"
                        android:textSize="@dimen/text_design_42px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_new_songs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/song_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/design_8px"
                        android:text="@string/title_new_song"
                        android:textColor="@color/text_color_namal_70"
                        android:textSize="@dimen/text_design_42px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tops"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/song_hot" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/design_8px"
                        android:text="@string/title_top"
                        android:textColor="@color/text_color_namal_70"
                        android:textSize="@dimen/text_design_42px" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_demand_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0AFFFFFF"
                android:paddingBottom="@dimen/design_20px"
                android:paddingLeft="@dimen/design_70px"
                android:paddingRight="@dimen/design_60px"
                android:paddingTop="@dimen/design_50px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大家都在唱"
                    android:textColor="@color/text_color_namal_40"
                    android:textSize="@dimen/text_design_42px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="更多>"
                    android:textColor="@color/text_color_namal_40"
                    android:textSize="@dimen/text_design_42px" />
            </RelativeLayout>

            <cn.com.ethank.yunge.pad.view.MyListView
                android:id="@+id/lv_top_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0AFFFFFF"
                android:divider="#0AFFFFFF"
                android:dividerHeight="1dp"
                android:listSelector="#00ffffff"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >
            </cn.com.ethank.yunge.pad.view.MyListView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/design_20px"
                android:background="#0AFFFFFF"
                android:paddingBottom="@dimen/design_50px"
                android:paddingLeft="@dimen/design_70px"
                android:paddingRight="@dimen/design_60px"
                android:paddingTop="@dimen/design_50px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐专题"
                    android:textColor="@color/text_color_namal_40"
                    android:textSize="@dimen/text_design_42px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="17sp" />
            </RelativeLayout>

            <cn.com.ethank.yunge.pad.view.MyGridView
                android:id="@+id/mgv_main_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0AFFFFFF"
                android:horizontalSpacing="@dimen/design_36px"
                android:listSelector="#00ffffff"
                android:numColumns="2"
                android:paddingLeft="@dimen/design_50px"
                android:paddingRight="@dimen/design_50px"
                android:verticalSpacing="@dimen/design_36px" >
            </cn.com.ethank.yunge.pad.view.MyGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ff6600"
                    android:orientation="vertical" >

                    <include layout="@layout/item_song" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ff6600" >

                    <include layout="@layout/item_song" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ff6600" >

                    <include layout="@layout/item_song" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ff6600" >

                    <include layout="@layout/item_song" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1C1C20"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_ktv_hot_song"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/u33"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KTV热歌榜"
                            android:textColor="@color/text_color_namal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ktv_new_song"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/u35"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KTV新歌榜"
                            android:textColor="@color/text_color_namal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_ktv_hot_chorus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/u37"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KTV热门合唱"
                            android:textColor="@color/text_color_namal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ktv_hot_demand"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/u39"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KTV必点歌曲榜"
                            android:textColor="@color/text_color_namal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/song_top_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/design_46px"
            android:layout_marginTop="@dimen/design_40px"
            android:background="@drawable/song_logo" />

        <RelativeLayout
            android:id="@+id/rl_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/design_20px"
            android:visibility="gone" >

            <EditText
                android:id="@+id/et_roomnum"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:hint="测试roomNum" />

            <Button
                android:id="@+id/bt_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/et_roomnum"
                android:text="确定" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rl_room"
            android:layout_marginRight="@dimen/design_20px"
            android:visibility="gone" >

            <EditText
                android:id="@+id/et_ip"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:hint="测试ip" />

            <Button
                android:id="@+id/bt_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/et_ip"
                android:text="确定" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_close_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="关闭遥控区" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_fgsong_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/design_60px"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_fgsong1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radius_center"
            android:button="@null"
            android:gravity="center"
            android:minEms="5"
            android:singleLine="true"
            android:text="@string/fgsong_demand_song"
            android:textColor="@drawable/seletor_title_text_color"
            android:textSize="@dimen/text_design_48px" />

        <RadioButton
            android:id="@+id/rb_fgsong2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radius_center"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:minEms="5"
            android:singleLine="true"
            android:text="@string/fgsong_demanded"
            android:textColor="@drawable/seletor_title_text_color"
            android:textSize="@dimen/text_design_48px" />

        <RadioButton
            android:id="@+id/rb_fgsong3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radius_center"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:minEms="5"
            android:singleLine="true"
            android:text="@string/fgsong_finished"
            android:textColor="@drawable/seletor_title_text_color"
            android:textSize="@dimen/text_design_48px" />
    </RadioGroup>

</LinearLayout>
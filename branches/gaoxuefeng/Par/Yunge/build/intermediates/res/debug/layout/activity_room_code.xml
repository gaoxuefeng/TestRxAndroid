<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepager_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:background="#16152b" >

        <TextView
            android:id="@+id/room_tv_left"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/design_30px"
            android:clickable="true"
            android:drawableLeft="@drawable/nav_back_white"
            android:drawablePadding="@dimen/design_12px"
            android:enabled="true"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_design_28px" />

        <TextView
            android:id="@+id/room_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#BBFFFFFF"
            android:textSize="@dimen/text_design_36px" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/code_img"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="让好友扫描此二维码，即可完成房间绑定"
        android:textColor="#ffffff"
        android:textSize="@dimen/design_26px" />

    <ImageView
        android:id="@+id/room_code_iv"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/room_code_again"
        android:text="重新扫码"
        android:textColor="#B51E8C"
        android:textSize="@dimen/design_26px" />

</LinearLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/activity_room_code.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepager_bg"
    android:id="@+id/pwd_ll_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_108px"
        android:background="@drawable/button_shape"
      >

        <LinearLayout
            android:layout_width="120dp"
            android:id="@+id/pwd_ll_login"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/pwd_tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/nav_back"
                android:drawablePadding="@dimen/design_12px"
                android:text="登录"
                android:textColor="#FD2C98"
                android:textSize="@dimen/text_design_28px" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="忘记密码"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_design_36px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/pwd_et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_104px"
            android:layout_marginLeft="@dimen/design_38px"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/register_phone_icon"
            android:drawablePadding="@dimen/design_30px"
            android:hint="请输入手机号码"
            android:phoneNumber="true"
            android:textColor="@color/text_color_all"
            android:textSize="@dimen/text_design_28px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/design_20px"
            android:layout_marginRight="@dimen/design_20px"
            android:background="@color/text_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_104px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/pwd_et_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/design_18px"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/register_verificationcode_icon"
                android:drawablePadding="@dimen/design_30px"
                android:hint="请输入动态密码"
                android:textColor="@color/text_color_all"
                android:textSize="@dimen/text_design_28px" />

            <Button
                android:id="@+id/pwd_but_code"
                android:layout_width="110dp"
                android:layout_height="@dimen/design_72px"
                android:background="@drawable/button_code"
                android:text="获取动态密码"
                android:textColor="#B5B7BF"
                android:textSize="@dimen/text_design_26px" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pwd_but"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_78px"
        android:layout_marginLeft="@dimen/design_20px"
        android:layout_marginRight="@dimen/design_20px"
        android:layout_marginTop="@dimen/design_20px"
        android:background="@drawable/button_login"
        android:text="登录"
        android:textColor="#ccffffff"
        android:textSize="@dimen/text_design_34px" />

</LinearLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/activity_forget_password.xml -->
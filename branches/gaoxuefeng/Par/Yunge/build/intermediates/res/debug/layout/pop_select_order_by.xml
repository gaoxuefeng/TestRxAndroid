<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#44000000"
    android:orientation="horizontal"
    android:visibility="visible" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dlv_pop_order_by"
            android:layout_alignTop="@+id/dlv_pop_order_by"
            android:background="@drawable/homepager_bg_short"
            android:scaleType="centerCrop" />

        <cn.com.ethank.yunge.app.ui.doublelist.DoubleListView
            android:id="@+id/dlv_pop_order_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#0AFFFFFF"
            android:dividerHeight="0dp"
            android:listSelector="#00FFFFFF"
            android:scrollbars="none" />
    </RelativeLayout>


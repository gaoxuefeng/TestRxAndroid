<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pre_time"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="选择性别" />

    <TextView
        android:id="@+id/gender_boy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pre_center"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center"
        android:text="男" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_color" />

    <TextView
        android:id="@+id/gender_girl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pre_center"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center"
        android:text="女" />

    <TextView
        android:id="@+id/gender_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/pre_center"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center"
        android:text="取消" />

</LinearLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/pop_gender.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/box_ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1c21"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_118px"
        android:background="#151417" >

        <LinearLayout
            android:id="@+id/detail_ll_exit"
            android:layout_width="50dp"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/design_30px"
                android:enabled="true"
                android:src="@drawable/nav_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="房间预定"
            android:textColor="#BBFFFFFF"
            android:textSize="@dimen/text_design_36px" />

        <TextView
            android:id="@+id/pre_tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/design_30px"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:text="计费详情"
            android:textColor="#FF41AB"
            android:textSize="@dimen/text_design_28px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#88000000" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/box_tv_groupTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1a191e"
                android:gravity="center"
                android:text="周一到周五13：00 - 18：00内任选3小时"
                android:textColor="@color/order_pink"
                android:textSize="@dimen/design_26px"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/design_40px"
                android:layout_marginTop="@dimen/design_34px"
                android:text="活动主题"
                android:textColor="#809898A2"
                android:textSize="@dimen/design_28px" />

            <EditText
                android:id="@+id/box_et_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/design_16px"
                android:layout_marginRight="@dimen/design_16px"
                android:background="@drawable/textfield_activated_holo_dark"
                android:gravity="center"
                android:hint="最长16个汉字"
                android:maxLength="16"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="#4d9898a2"
                android:textSize="@dimen/text_design_28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/design_44px"
                android:layout_marginTop="15dp"
                android:text="预约时间"
                android:textColor="#809898A2"
                android:textSize="@dimen/design_28px" />

            <RelativeLayout
                android:id="@+id/box_rl_pretime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_78px"
                android:layout_marginLeft="@dimen/design_16px"
                android:layout_marginRight="@dimen/design_16px"
                android:layout_marginTop="@dimen/design_30px"
                android:background="#222126" >

                <TextView
                    android:id="@+id/box_tv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/design_20px"
                    android:gravity="center_vertical"
                    android:text="请点击选择预约时间"
                    android:textColor="#9898a2"
                    android:textSize="@dimen/text_design_30px" />

                <TextView
                    android:id="@+id/box_tv_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/design_24px"
                    android:layout_toRightOf="@id/box_tv_data"
                    android:gravity="center_vertical"
                    android:textColor="#9898a2"
                    android:textSize="@dimen/text_design_30px" />

                <TextView
                    android:id="@+id/box_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/design_24px"
                    android:layout_toRightOf="@id/box_tv_hour"
                    android:gravity="center_vertical"
                    android:textColor="#9898a2"
                    android:textSize="@dimen/text_design_30px" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/design_44px"
                android:layout_marginTop="15dp"
                android:text="房间类型"
                android:textColor="#809898A2"
                android:textSize="@dimen/design_28px" />

            <RelativeLayout
                android:id="@+id/box_ll_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_78px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/design_15px"
                android:background="#222126" >

                <TextView
                    android:id="@+id/box_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/design_20px"
                    android:gravity="center_vertical"
                    android:text="请点击选择房间类型"
                    android:textColor="#9898a2"
                    android:textSize="@dimen/text_design_30px" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/box_ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/design_44px"
                    android:layout_marginTop="15dp"
                    android:text="当前价格"
                    android:textColor="#809898A2"
                    android:textSize="@dimen/design_28px" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/design_78px"
                    android:layout_marginLeft="@dimen/design_16px"
                    android:layout_marginRight="@dimen/design_16px"
                    android:layout_marginTop="@dimen/design_15px"
                    android:background="#222126"
                    android:gravity="center_vertical"
                    android:textColor="#B5B7BF"
                    android:textSize="@dimen/text_design_34px" >

                    <TextView
                        android:id="@+id/box_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/design_20px"
                        android:text="小包"
                        android:textColor="#9898a2"
                        android:textSize="@dimen/text_design_30px" />

                    <TextView
                        android:id="@+id/box_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/design_24px"
                        android:layout_toRightOf="@id/box_price_1"
                        android:text="21:00-00:00"
                        android:textColor="#9898a2"
                        android:textSize="@dimen/text_design_30px" />

                    <TextView
                        android:id="@+id/box_price_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/design_16px"
                        android:layout_toRightOf="@id/box_price_2"
                        android:text="3小时"
                        android:textColor="#9898a2"
                        android:textSize="@dimen/text_design_30px" />

                    <TextView
                        android:id="@+id/box_price_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/design_64px"
                        android:layout_toRightOf="@id/box_price_3"
                        android:text="147.00"
                        android:textSize="@dimen/text_design_30px" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/design_34px"
                    android:layout_marginTop="@dimen/design_28px"
                    android:text="点击查看价格说明"
                    android:textColor="#4d9898a2"
                    android:textSize="@dimen/design_24px" />
            </LinearLayout>

            <TextView
                android:id="@+id/box_tv_annotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="注： 该时段不满3小时，按原价计费"
                android:textColor="@color/order_pink"
                android:visibility="gone" />

            <Button
                android:id="@+id/detail_but_pre"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_78px"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/design_16px"
                android:layout_marginRight="@dimen/design_16px"
                android:layout_marginTop="@dimen/design_68px"
                android:background="@drawable/button_pre"
                android:clickable="true"
                android:enabled="true"
                android:text="预定"
                android:textColor="#4dffffff"
                android:textSize="@dimen/text_design_30px" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/activity_box_pre.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_100px"
        android:alpha="0.7"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/remote_playing_bj"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="正在播放:尹正伟(演唱:发如雪)"
            android:textColor="#fff"
            android:textSize="@dimen/text_design_24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="下一首:栀子花开"
            android:textColor="#fff"
            android:textSize="@dimen/text_design_24px" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_remote_btn_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/remote_btn_bg"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_remote_resing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/remote_resing_btn"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_remote_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/remote_singer_btn"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_remote_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/remote_pause_btn"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_remote_change_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/remote_change_song_btn"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_remote_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/remote_mute_btn"
            android:clickable="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/ll_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/design_14px"
            android:layout_marginRight="@dimen/design_14px"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_remote_mic_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/remote_down_btn"
                        android:clickable="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_remote_mic_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/remote_up_btn"
                        android:clickable="true"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:paddingBottom="5dp"
                    android:paddingTop="8dp"
                    android:text="麦克风"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_remote_tone_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/remote_down_btn"
                        android:clickable="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_remote_tone_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/remote_up_btn"
                        android:clickable="true"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:paddingBottom="5dp"
                    android:paddingTop="8dp"
                    android:text="升降调"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_remote_accompany_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/remote_down_btn"
                        android:clickable="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_remote_accompany_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/remote_up_btn"
                        android:clickable="true"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:paddingBottom="5dp"
                    android:paddingTop="8dp"
                    android:text="伴  奏"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_4_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_turn"
            android:layout_marginLeft="@dimen/design_14px"
            android:layout_marginRight="@dimen/design_14px"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_remote_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/remote_light_btn"
                    android:clickable="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:padding="8dp"
                    android:text="灯光"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_remote_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/remote_effect_btn"
                    android:clickable="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:padding="8dp"
                    android:text="唱效"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_remote_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/remote_record_btn"
                    android:clickable="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:padding="8dp"
                    android:text="录音"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_remote_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/remote_service"
                    android:clickable="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:padding="8dp"
                    android:text="服务"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_design_24px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/activity_remote_control.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#482a70"
    android:paddingBottom="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/tv_typeName_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="8"
        android:textColor="@color/WHITE"
        android:textSize="@dimen/text_design_28px"  />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/tv_price_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="Â¥ 0"
            android:textColor="#cf378f"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_price_id"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_reduce_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/reducetypeicon" />

            <TextView
                android:id="@+id/tv_num_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pricebg"
                android:gravity="center"
                android:text="0"
                android:textColor="#cf378f"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_add_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/addtypeicon" />
        </LinearLayout>
    </RelativeLayout>


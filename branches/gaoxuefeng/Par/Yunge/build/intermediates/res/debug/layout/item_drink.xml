<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_20px"
        android:background="@color/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bg_color"
        android:layout_height="@dimen/design_78px" >

        <TextView
            android:id="@+id/drink_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/design_78px"
            android:layout_marginLeft="@dimen/design_24px"
            android:gravity="center_vertical"
            android:textColor="#9799A2"
            android:textSize="@dimen/text_design_28px" />
        
        <ImageView 
            android:id="@+id/tab_tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/design_40px"
           	android:src="@drawable/consume_drinks"
           />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_112px"
        android:background="@color/bg_color" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/design_112px"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/drink_tv_thing"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/design_40px"
                android:layout_marginRight="@dimen/design_40px"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:textColor="#809799a2"
                android:textSize="@dimen/text_design_28px" />

        </LinearLayout>

        <TextView
            android:id="@+id/drink_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/design_40px"
            android:textColor="#f03da2"
            android:textSize="@dimen/design_26px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_color" />

</LinearLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/item_drink.xml -->
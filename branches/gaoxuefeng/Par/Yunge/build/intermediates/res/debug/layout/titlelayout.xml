<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imgbtn="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_bar"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@color/gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="15dp" >

        <com.coyotelib.app.ui.widget.ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            imgbtn:img="@drawable/top_bar_back_icon" />

        <com.coyotelib.app.ui.widget.ImageButton
            android:id="@+id/app_logo"
            android:layout_width="120dip"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:visibility="gone"
            imgbtn:img="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/function_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="titlebar"
            android:textColor="@color/BLACK"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/title_img"
            android:layout_width="72.7dip"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/function_name"
            android:visibility="gone" />

        <com.coyotelib.app.ui.widget.ImageButton
            android:id="@+id/title_function"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            imgbtn:img="@drawable/top_bar_search" />
    </RelativeLayout>

    <View
        android:id="@+id/v_basic_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:layout_alignParentBottom="true"
        android:background="@color/BLACK" />


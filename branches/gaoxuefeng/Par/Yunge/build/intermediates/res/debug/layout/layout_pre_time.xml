<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#1F1F1F"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1B1B1B"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/pre_cancel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center_vertical"
            android:text="取消"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pre_confirm"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:enabled="true"
            android:gravity="right|center_vertical"
            android:text="确定"
            android:textColor="#EC42A2"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:scrollbars="none"
        android:id="@+id/box_lv_type"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:divider="@null"
        android:background="#1F1F1F"
        android:listSelector="@drawable/timer_selector"
        android:orientation="vertical" >
    </ListView>

</LinearLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/layout_pre_time.xml -->
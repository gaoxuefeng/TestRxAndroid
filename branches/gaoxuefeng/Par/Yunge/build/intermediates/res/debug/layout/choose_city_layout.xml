    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.04"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/rl_letterlist" >

            <cn.com.ethank.yunge.app.search.city.PinnedHeaderListView
                android:id="@+id/city_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="#FF0000"
                android:drawSelectorOnTop="false"
                android:fadingEdge="none"
                android:listSelector="#00000000" />

            <ListView
                android:id="@+id/city_result_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@color/listview_divider"
                android:dividerHeight="1dp"
                android:drawSelectorOnTop="false"
                android:fadingEdge="none"
                android:listSelector="@color/listview_divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_letterlist"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#0E000000"
            android:clickable="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <com.coyotelib.app.ui.indexlist.LetterListView
                android:id="@+id/LetterListView"
                android:layout_width="30dp"
                android:layout_height="fill_parent" />
        </RelativeLayout>
    </RelativeLayout>


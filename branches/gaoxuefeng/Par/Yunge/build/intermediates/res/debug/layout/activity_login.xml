<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepager_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_color"
       >

        <LinearLayout
            android:id="@+id/login_ll_exit"
            android:layout_width="100dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/design_30px"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/nav_back"
                android:drawablePadding="@dimen/design_10px"
                android:text="我的"
                android:textColor="#FF41AB"
                android:textSize="@dimen/text_design_28px" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/text_design_36px" />

        <RelativeLayout
            android:id="@+id/login_rl_pwd"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/design_30px" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="忘记密码"
                android:textColor="#FF41AB"
                android:textSize="@dimen/text_design_28px" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/design_20px"
        android:layout_marginRight="@dimen/design_20px"
        android:layout_marginTop="@dimen/design_30px"
        android:background="@drawable/button_shape"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_104px"
            android:layout_marginLeft="@dimen/design_38px"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/register_phone_icon"
            android:drawablePadding="@dimen/design_30px"
            android:hint="请输入手机号码"
            android:phoneNumber="true"
            android:textColor="@color/text_color_all"
            android:textSize="@dimen/text_design_28px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#0cffffff" />

        <EditText
            android:id="@+id/login_et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_104px"
            android:layout_marginLeft="@dimen/design_38px"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/register_verificationcode_icon"
            android:drawablePadding="@dimen/design_30px"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/text_color_all"
            android:textSize="@dimen/text_design_28px" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/but_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_78px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/design_20px"
                android:layout_marginTop="@dimen/design_20px"
                android:background="@drawable/button_login"
                android:clickable="true"
                android:enabled="true"
                android:onClick="login"
                android:text="登录"
                android:textColor="#ccffffff"
                android:textSize="@dimen/text_design_30px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/design_15px"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" >

                <TextView
                    android:id="@+id/tv_left_line"
                    android:layout_width="@dimen/design_200px"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:background="#33ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/design_38px"
                    android:layout_marginRight="@dimen/design_38px"
                    android:text="or"
                    android:textColor="#33ffffff"
                    android:textSize="@dimen/text_design_26px" />

                <TextView
                    android:id="@+id/tv_left_line"
                    android:layout_width="@dimen/design_200px"
                    android:layout_height="0.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#33ffffff" />
            </RelativeLayout>

            <Button
                android:id="@+id/but_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_78px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/design_15px"
                android:background="@drawable/button_register"
                android:text="手机号注册"
                android:textColor="#ccffffff"
                android:textSize="@dimen/text_design_30px" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/login_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/design_70px"
        android:paddingRight="@dimen/design_70px"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_left_line"
            android:layout_width="@dimen/design_98px"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="#303033" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/design_36px"
            android:layout_marginRight="@dimen/design_36px"
            android:text="使用第三方账号登录"
            android:textColor="#303033"
            android:textSize="@dimen/text_design_26px" />

        <TextView
            android:id="@+id/tv_right_line"
            android:layout_width="@dimen/design_98px"
            android:layout_height="0.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#303033" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/thirdparty_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/design_50px"
        android:layout_marginLeft="@dimen/design_70px"
        android:layout_marginRight="@dimen/design_70px"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signin_wechat_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/design_78px"
            android:layout_toRightOf="@id/img_weixin"
            android:src="@drawable/signin_weibo_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/design_78px"
            android:layout_toRightOf="@id/img_weibo"
            android:src="@drawable/signin_qq_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_ali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/img_qq"
            android:src="@drawable/signin_alipay_icon"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/activity_login.xml -->
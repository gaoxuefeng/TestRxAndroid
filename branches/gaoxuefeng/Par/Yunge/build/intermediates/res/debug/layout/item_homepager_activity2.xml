<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:id="@+id/rl_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <cn.com.ethank.yunge.view.MyRoundImageView
            android:id="@+id/iv_activiti_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_defaultimg_bg"
            android:scaleType="centerCrop" />

        <cn.com.ethank.yunge.view.MyRoundImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/activity_black_bg"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/design_26px" >

            <cn.com.ethank.yunge.view.MyBottomRoundImageView
                android:id="@+id/iv_city_tag_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/tv_city_name"
                android:layout_alignLeft="@+id/tv_city_name"
                android:layout_alignRight="@+id/tv_city_name"
                android:layout_alignTop="@+id/tv_city_name"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="#804DA8" />

            <TextView
                android:id="@+id/tv_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:textColor="#fff"
                android:textSize="@dimen/text_design_22px" />
        </RelativeLayout>

        <!-- 下面的字 -->

        <TextView
            android:id="@+id/tv_ispraised"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/design_46px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/design_16px"
            android:background="@drawable/activity_praise_btn"
            android:button="@null"
            android:clickable="false"
            android:gravity="center"
            android:singleLine="true"
            android:text="5000"
            android:textColor="#fff" />

        <!-- 这个layout是 底部浏览报名参加的显示.让它显示即可 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/design_26px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_activity_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="@dimen/design_28px" />

                <ImageView
                    android:id="@+id/iv_activitydengji_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/design_20px"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/activity_fillet_icon" />

                <LinearLayout
                    android:id="@+id/ll_timeeandaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="@dimen/design_15px"
                            android:layout_height="@dimen/design_15px"
                            android:layout_marginRight="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/activity_time_icon" />

                        <TextView
                            android:id="@+id/tv_activity_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#e6ffffff"
                            android:textSize="@dimen/design_20px" />

                        <TextView
                            android:id="@+id/tv_activity_ktvname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="#e6ffffff"
                            android:textSize="@dimen/design_24px" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="@dimen/design_15px"
                            android:layout_height="@dimen/design_15px"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/activity_pin_icon" />

                        <TextView
                            android:id="@+id/tv_instance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/iv_icon"
                            android:background="@drawable/activity_distance"
                            android:gravity="center"
                            android:textColor="#b3ffffff"
                            android:textSize="@dimen/design_20px"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_activity_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_toRightOf="@+id/tv_instance"
                            android:gravity="top"
                            android:textColor="#b3ffffff"
                            android:textSize="@dimen/design_20px" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_hot_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/item_homepager_activity2.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/four_black"
    android:paddingLeft="@dimen/design_18px"
    android:paddingRight="@dimen/design_18px" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bj"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_88px"
                android:gravity="center"
                android:text="请选择地图"
                android:textColor="@color/map_select"
                android:textSize="@dimen/text_design_26px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_1px"
                android:background="@color/line" />

            <TextView
                android:id="@+id/tv_baidu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_88px"
                android:gravity="center"
                android:text="使用百度地图导航"
                android:textColor="@color/map_blue"
                android:textSize="@dimen/text_design_36px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_1px"
                android:background="@color/line" />

            <TextView
                android:id="@+id/tv_gaode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_88px"
                android:gravity="center"
                android:text="使用高德地图导航"
                android:textColor="@color/map_blue"
                android:textSize="@dimen/text_design_36px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_88px"
            android:layout_marginBottom="@dimen/design_10px"
            android:layout_marginTop="@dimen/text_design_18px"
            android:background="@drawable/shape_bj"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/map_blue"
            android:textSize="@dimen/text_design_36px" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/mine_map_popwindow.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:id="@+id/rl_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_activiti_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/home_defaultimg_bg" />

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/design_26px"
            android:background="#804DA8"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:text="乌鲁木齐"
            android:textColor="#fff"
            android:textSize="@dimen/text_design_22px" />
        <!-- 下面的字 -->

        <RelativeLayout
            android:id="@+id/rl_ispraised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/design_16px"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/tv_ispraised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/activity_praise_btn"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="5000"
                android:textColor="#fff" />
        </RelativeLayout>

        <!-- 这个layout是 底部浏览报名参加的显示.让它显示即可 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="invisible"
            android:weightSum="362" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="48" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="614" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="150" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="140"
                        android:gravity="right"
                        android:padding="3dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:alpha="0.9"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="100"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_design_22px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:alpha="0.9"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:text="浏览"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_design_22px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="140"
                        android:gravity="right"
                        android:padding="3dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:alpha="0.9"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="400"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_design_22px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:alpha="0.9"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:text="报名"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_design_22px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="140"
                        android:gravity="right"
                        android:padding="3dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:alpha="0.9"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="800"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_design_22px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:alpha="0.9"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:text="参加"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_design_22px" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:weightSum="362" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="348"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <cn.com.ethank.yunge.app.util.XCRoundImageViewByXfermode
                    android:id="@+id/iv_conmany_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/design_30px"
                    android:layout_marginRight="@dimen/design_18px"
                    android:scaleType="centerCrop"
                    android:src="@drawable/activity_default_company" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:weightSum="348" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_activity_branch_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            android:text="宝乐迪量贩KTV"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_design_22px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_activity_branch_name"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:text="企业认证"
                            android:textColor="#e0b11d"
                            android:textSize="@dimen/text_design_22px" />
                    </RelativeLayout>
                    <!-- 显示浏览,点赞数量放开这个即可 -->

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="27"
                        android:visibility="gone" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="7" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_activity_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/activity_theme_bg"
                android:gravity="center"
                android:text="飙歌终极PK赛"
                android:textColor="#fff"
                android:textSize="@dimen/design_28px"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/tv_activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年7月14日  14:00"
                android:textColor="#fff"
                android:textSize="@dimen/design_20px" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/item_homepager_activity.xml -->
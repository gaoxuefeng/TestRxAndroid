<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_type_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/iv_bottom_line"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:singleLine="true"
            android:text="全国"
            android:textColor="@drawable/activity_type_text_color"
            android:textSize="@dimen/text_design_26px" />

        <ImageView
            android:id="@+id/iv_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/activity_nav_s" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/lvhonghe/project/ethank/ethank/trunk/client/yunge/Android/Par/Yunge/res/layout/item_homepager_type.xml -->